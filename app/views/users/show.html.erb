<%= render "/shared/nav_bar"%>
<%= stylesheet_link_tag 'show_post.css'%>
<div id="user-post">
  <div id="personal-info">
    <%= render "shared/user_banner" %>
    <div id="span">
      <h1>About Me:</h1>
      <p><%= @user.bio %></p>
    </div>
  </div>
  <div id="all-posts">
  <div id="post-header">
    <p>Posts<p>
    <%= link_to 'New Post', new_user_post_path(@current_user), class: 'new-post-button' %>
  </div>
    <% @user.recent_posts.each do |post| %>
      <%= link_to user_post_path(@user, post) do %>
        <div id="data-cont">
          <div id="details">
            <p><%= post.title %></p>
            <p id='no'>Comments: <%= post.comment_counter %></p>
            <p id='no'>Likes: <%= post.likes_counter %></p>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= link_to "Show All Posts", user_posts_path(@user) %>
  </div>
</div>
